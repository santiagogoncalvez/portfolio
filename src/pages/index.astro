---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import ProfileCheckIcon from "../icons/ProfileCheck.astro";
import GitHubIcon from "../icons/GitHub.astro";
import MailIcon from "../icons/Mail.astro";
// import BriefCaseIcon from "../icons/BriefCase.astro";

import { SectionContainerMotion } from "../components/SectionContainerMotion.jsx";
// import Experience from "../components/Experience.astro";
import Subtitle from "../components/Subtitle.astro";
import Code from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";

import { ExampleMotion } from "../components/ExampleMotion";
---

<Layout
   title="Porfolio de Santiago Goncalvez - Desarrollador y Programador Web"
   description="Contrata a Santiago Goncalvez para crear tu aplicación web o móvil. Desarrollador Web, estudiante de Ingeniería Informática y Programador. Especializado en crear aplicaciones únicas."
>
   <main class="w-full py-10 lg:py-30 px-5 flex flex-col gap-35">
      <SectionContainerMotion client:visible>
         <div
            class="w-full flex flex-col md:flex-row lg:items-center justify-between gap-8"
         >
            <div class="w-full flex flex-col gap-8 order-2 md:order-1">
               <a
                  class="inline-flex w-fit"
                  href="http://www.linkedin.com/in/santiagogoncalvez"
                  target="_blank"
                  rel="noopener noreferrer"
               >
                  <Badge><strong>Disponible para trabajar</strong> </Badge>
               </a>

               <h1
                  class="text-3xl md:text-5xl lg:text-5xl font-bold text-[#fafafa] leading-tight"
               >
                  Hola, soy Santiago Goncalvez
               </h1>

               <h2
                  class="text-xl lg:text-2xl text-[#B0B0B0] max-w-2xl text-wrap"
               >
                  <strong class="text-[#d7d7d7]"
                     >Estudiante de Ingeniería y Frontend Developer</strong
                  >. Especializado en el ecosistema de React. Centrado en la
                  optimización de aplicaciones web y la resolución creativa de
                  problemas.
               </h2>

               <nav class="w-full flex gap-4 flex-wrap">
                  <SocialPill
                     href="http://www.linkedin.com/in/santiagogoncalvez"
                     class="hover:text-[#0A66C2] transition"
                  >
                     <LinkedInIcon
                        class="size-3 md:size-6 hover:text-[#0A66C2] transition"
                     />
                     LinkedIn
                  </SocialPill>

                  <SocialPill
                     href="https://github.com/santiagogoncalvez"
                     class="hover:text-black transition"
                  >
                     <GitHubIcon
                        class="size-3 md:size-6 hover:text-black transition"
                     />
                     GitHub
                  </SocialPill>
                  <SocialPill
                     href="mailto:santiago.goncalvez.l@gmail.com"
                     class="hover:text-[#6B4400] transition"
                  >
                     <MailIcon
                        class="size-3 md:size-6 hover:text-[#6B4400] transition"
                     />
                     santiago.goncalvez.l@gmail.com
                  </SocialPill>
               </nav>
            </div>

            <div
               class="w-fit h-fit order-1 md:order-2 shrink-0
              rounded-full
              shadow-[0_20px_50px_rgba(0,0,0,0.9),0_0_20px_rgba(255,255,255,0.03)]
              transition-all duration-500 ease-out
              hover:scale-105 hover:shadow-[0_30px_60px_rgba(0,0,0,0.2),0_0_30px_rgba(255,255,255,0.05)]"
            >
               <img
                  src="/santiago-goncalvez-front-face-background-transparent.webp"
                  alt="Santiago Goncalvez photo"
                  class="rounded-full size-20 lg:size-70 object-cover bg-gradient-to-b from-[#dcdbdb] to-[#474747]"
               />
            </div>
         </div>
      </SectionContainerMotion>

      <!-- Agregar cuando tenta experiencia -->
      <!-- <SectionContainerMotion client:visible id="experiencia">
         <Subtitle class="flex flex-row items-center gap-x-4">
            <BriefCaseIcon class="size-8" />
            <span>Experiencia laboral</span>
         </Subtitle>

         <Experience />
      </SectionContainerMotion> -->

      <SectionContainerMotion client:visible id="proyectos">
         <Subtitle class="flex flex-row items-center gap-x-4">
            <Code class="size-8" />
            <span>Proyectos</span>
         </Subtitle>

         <Projects />
      </SectionContainerMotion>

      <SectionContainerMotion client:visible id="sobre-mi">
         <Subtitle class="flex flex-row items-center gap-x-4">
            <ProfileCheckIcon class="size-8" />
            <span>Sobre mí</span>
         </Subtitle>

         <AboutMe />
      </SectionContainerMotion>

   </main>
</Layout>

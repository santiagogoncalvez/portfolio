---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GitHubIcon from "../icons/GitHub.astro";
import MailIcon from "../icons/Mail.astro";
import BriefCaseIcon from "../icons/BriefCase.astro";

import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import Subtitle from "../components/Subtitle.astro";
---

<Layout
   title="Porfolio de Santiago Goncalvez - Desarrollador y Programador Web"
   description="Contrata a Santiago Goncalvez para crear tu aplicación web o móvil. Desarrollador Web, estudiante de Ingeniería Informática y Programador. Especializado en crear aplicaciones únicas."
>
   <main class="py-20 flex flex-col gap-40">
      <SectionContainer>
         <div
            class="flex flex-col md:flex-row items-center justify-between gap-10"
         >
            <div class="flex flex-col gap-8 order-2 md:order-1">
               <a
                  class="inline-flex w-fit"
                  href="http://www.linkedin.com/in/santiagogoncalvez"
                  target="_blank"
                  rel="noopener noreferrer"
               >
                  <Badge>Disponible para trabajar</Badge>
               </a>

               <h1 class="text-5xl font-bold text-[#fafafa] leading-tight">
                  Hola, soy Santiago Goncalvez
               </h1>

               <h2 class="text-2xl text-[#B0B0B0] max-w-2xl">
                  <strong class="text-[#d7d7d7]"
                     >Estudiante de Ingeniería y Frontend Developer</strong
                  >. Especializado en el ecosistema de React. Centrado en la
                  optimización de aplicaciones web y la resolución creativa de
                  problemas.
               </h2>

               <nav class="flex gap-x-4">
                  <SocialPill
                     href="http://www.linkedin.com/in/santiagogoncalvez"
                  >
                     <LinkedInIcon
                        class="size-6 text-[#B0B0B0] hover:text-[#0A66C2] transition-colors"
                     />
                     LinkedIn
                  </SocialPill>

                  <SocialPill href="https://github.com/santiagogoncalvez">
                     <GitHubIcon
                        class="size-6 text-[#B0B0B0] hover:text-white transition-colors"
                     />
                     GitHub
                  </SocialPill>
                  <SocialPill href="mailto:santiago.goncalvez.l@gmail.com">
                     <MailIcon
                        class="size-6 text-[#B0B0B0] hover:text-white transition-colors"
                     />
                     santiago.goncalvez.l@gmail.com
                  </SocialPill>
               </nav>
            </div>

            <div
               class="order-1 md:order-2 shrink-0
              rounded-full
              shadow-[0_20px_50px_rgba(0,0,0,0.9),0_0_20px_rgba(255,255,255,0.03)]
              transition-all duration-500 ease-out
              hover:scale-105 hover:shadow-[0_30px_60px_rgba(0,0,0,0.8),0_0_30px_rgba(255,255,255,0.05)]"
            >
               <img
                  src="/santiago-goncalvez-front-face-background-transparent.png"
                  alt="Santiago Goncalvez photo"
                  class="rounded-full w-[225px] h-[225px] object-cover bg-gradient-to-b from-[#6c6c6c] to-[#141414]"
               />
            </div>
         </div>
      </SectionContainer>

      <!-- Agregar cuando tenta experiencia -->
      <SectionContainer id="experiencia">
         <Subtitle class="flex flex-row items-center gap-x-4">
            <BriefCaseIcon class="size-8" />
            <span>Experiencia laboral</span>
         </Subtitle>
         <Experience />
      </SectionContainer>
   </main>
</Layout>

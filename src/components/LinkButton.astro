const { href } = Astro.props;
---

<a
   target="_blank"
   href={href}
   role="link"
   class="inline-flex bg-gray-100 text-gray-800 border-text items-center justify-center gap-2 px-3 py-2 space-x-2 text-base transition dark:text-white dark:bg-text-muted border dark:border-text/50 text-md hover:bg-border-subtle hover:border-text-highlighted group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black"
>
   <slot />
</a>

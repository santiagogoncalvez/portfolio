---
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GitHubIcon from "../icons/GitHub.astro";
import MailIcon from "../icons/Mail.astro";
import DowloadCV from "./DowloadCV.astro";
---

<div
   class="w-full flex flex-col md:flex-row lg:items-center justify-between gap-8"
>
   <div class="w-full flex flex-col gap-8 order-2 md:order-1">
      <a
         class="inline-flex w-fit"
         href="http://www.linkedin.com/in/santiagogoncalvez"
         target="_blank"
         rel="noopener noreferrer"
      >
         <Badge><strong>Disponible para trabajar</strong> </Badge>
      </a>

      <h1
         class="font-[Inter_Variable] text-3xl md:text-5xl lg:text-5xl font-bold text-bg-deep dark:text-[#fafafa] leading-tight"
      >
         Hola, soy Santiago Goncalvez
      </h1>

      <h2
         class="text-xl lg:text-2xl text-border-strong dark:text-[#B0B0B0] max-w-2xl text-wrap"
      >
         <strong class="text-bg-base dark:text-[#d7d7d7]"
            >Estudiante de Ingeniería y Frontend Developer</strong
         >. Especializado en el ecosistema de React. Centrado en la optimización
         de aplicaciones web y la resolución creativa de problemas.
      </h2>

      <nav class="w-full flex gap-x-4 gap-y-6 flex-wrap">
         <SocialPill
            href="http://www.linkedin.com/in/santiagogoncalvez"
            class="text-border-strong dark:text-title hover:text-[#0A66C2] dark:hover:text-[#0A66C2] transition group"
         >
            <LinkedInIcon class="size-3 md:size-6 transition" />
            LinkedIn
         </SocialPill>

         <SocialPill
            href="https://github.com/santiagogoncalvez"
            class="text-border-strong dark:text-title hover:text-black transition"
         >
            <GitHubIcon class="size-3 md:size-6 hover:text-black transition" />
            GitHub
         </SocialPill>
         <SocialPill
            href="mailto:santiago.goncalvez.l@gmail.com"
            class="text-border-strong dark:text-title hover:text-[#6B4400] transition"
         >
            <MailIcon
               class="size-3 md:size-6 hover:text-[#6B4400] transition"
            />
            santiago.goncalvez.l@gmail.com
         </SocialPill>

         <DowloadCV />
      </nav>
   </div>

   <div
      class="w-fit h-fit order-1 md:order-2 shrink-0
         rounded-full
         shadow-[0_10px_30px_rgba(0,0,0,0.08),0_0_10px_rgba(0,0,0,0.02)] dark:shadow-[0_20px_50px_rgba(0,0,0,0.9),0_0_20px_rgba(255,255,255,0.03)] transition-all duration-500 ease-out hover:scale-103 hover:shadow-[0_20px_40px_rgba(0,0,0,0.12)] dark:hover:shadow-[0_30px_60px_rgba(0,0,0,0.2),0_0_30px_rgba(255,255,255,0.05)]"
   >
      <img
         src="/santiago-goncalvez-front-face-background-transparent.webp"
         alt="Santiago Goncalvez photo"
         class="rounded-full size-20 lg:size-70 object-cover bg-gradient-to-b from-[#e7e6e6] to-[#8b8b8b]"
      />
   </div>
</div>

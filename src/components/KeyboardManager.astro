---

<div id="normal-footer" class="no-print">
   <div class="footer-label text-bg-deep dark:text-text bg-[#fdfdfd] dark:bg-bg-surface">
      Comandos <kbd class="dark:text-bg-surface">Ctrl</kbd> + <kbd
         class="dark:text-bg-surface">K</kbd
      >
   </div>
</div>

<button
   id="footer-button"
   class="no-print shadow-2xl dark:bg-slate-900 dark:border-slate-700 dark:text-white rounded-xl"
   aria-label="Abrir comandos"
>
   <svg
      xmlns="http://www.w3.org/2000/svg"
      width="28"
      height="28"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
   >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path
         d="M7 9a2 2 0 1 1 2 -2v10a2 2 0 1 1 -2 -2h10a2 2 0 1 1 -2 2v-10a2 2 0 1 1 2 2h-10"
      ></path>
   </svg>
</button>

<div
   id="hotkeypad"
   data-placeholder="Buscar comando"
   data-info={JSON.stringify(profilesInfo)}
>
</div>

<script>
   import HotKeyPad from "hotkeypad";
   import "hotkeypad/index.css";

   const hotkeypad = new HotKeyPad();

   const updateTheme = () => {
      const isDark = document.documentElement.classList.contains("dark");

      hotkeypad.instance.classList.toggle("dark", isDark);
      hotkeypad.instance.classList.toggle("light", !isDark);

      hotkeypad.instance.setAttribute("data-theme", isDark ? "dark" : "light");
   };

   // Observar cambios de tema en el HTML
   const observer = new MutationObserver(updateTheme);
   observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
   });
   updateTheme();

   const info = hotkeypad.instance.getAttribute("data-info") ?? "[]";
   const parsedInfo = JSON.parse(info);

   const socialData = parsedInfo.map((item: any) => ({
      ...item,
      handler: () => window.open(item.url, "_blank"),
   }));

   hotkeypad.setCommands([
      {
         id: "download-cv",
         title: "Descargar CV",
         icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4M7 10l5 5 5-5M12 15V3"/></svg>`,
         hotkey: "ctrl+D",
         section: "Acciones",
         handler: () => {
            const link = document.createElement("a");
            link.href = "/Santiago-Goncalvez-Curriculum-Vitae.pdf";
            link.download = "Santiago-Goncalvez-CV.pdf";
            link.click();
         },
      },
      {
         id: "open-email",
         title: "Enviar correo",
         icon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>`,
         hotkey: "ctrl+E",
         section: "Acciones",
         handler: () => {
            window.location.href = "mailto:santiago.goncalvez.l@gmail.com";
         },
      },
      ...socialData,
   ]);

   // Abrir con click en botÃ³n mÃ³vil
   document.getElementById("footer-button")?.addEventListener("click", () => {
      hotkeypad.open();
   });
</script>

<style>
   #normal-footer {
      --nav-bg: rgba(255, 255, 255, 0.8);
      --nav-border: rgba(0, 0, 0, 0.08);
      --nav-shadow: rgba(0, 0, 0, 0.05);
   }
   #normal-footer {
      position: fixed;
      bottom: 0;
      right: 0;
      width: fit-content;
      font-size: 0.85rem;
      padding: 10px;

      display: none; /* ðŸ‘ˆ CLAVE */

      view-timeline-name: --revealing;
      view-timeline-axis: block;

      animation: linear 0.3s fadeIn;
      animation-timeline: --revealing;
      animation-range: entry 100% cover 10%;
   }

   #normal-footer div {
      backdrop-filter: blur(12px);
      border: 1px solid var(--nav-border);
      box-shadow: 0 10px 15px -3px var(--nav-shadow);
   }

   #footer-button {
      position: fixed;
      bottom: 1rem;
      right: 1rem;
      width: 56px;
      height: 56px;
      background: white;
      border: 1px solid #eee;
      display: flex; /* ðŸ‘ˆ CLAVE */
      align-items: center;
      justify-content: center;
      z-index: 40;
      cursor: pointer;
      color: #666;
   }

   @media (min-width: 768px) {
      #normal-footer {
         display: block;
      }

      #footer-button {
         display: none;
      }
   }

   .footer-label {
      padding: 8px 12px;
      border-radius: 10px;
      text-align: center;
   }

   kbd {
      background: #eee;
      border-radius: 4px;
      padding: 2px 6px;
      font-size: 10px;
      font-weight: 600;
   }

   @keyframes fadeIn {
      from {
         opacity: 0;
         transform: translateY(10px);
      }
      to {
         opacity: 1;
         transform: translateY(0);
      }
   }

   /* ============================= */
   /* HOTKEYPAD â€“ DARK MODE THEME */
   /* ============================= */

   #hotkeypad.dark {
      /* Fondo general */
      --hotkeypad-bg-backdrop: var(--color-bg-deep);
      --hotkeypad-bg-container: var(--color-bg-elevated);

      /* Items */
      --hotkeypad-bg-item: transparent;
      --hotkeypad-bg-item-hover: var(--color-border-strong);

      /* Bordes */
      --hotkeypad-border-container: var(--color-border-subtle);
      --hotkeypad-border-container-hover: var(--color-border-strong);

      /* Texto */
      --hotkeypad-fg: var(--color-title);
      --hotkeypad-fg-muted: var(--color-text);

      /* KBD (atajos) */
      --hotkeypad-bg-kbd: var(--color-bg-elevated);
      --hotkeypad-border-kbd: var(--color-border-strong);
      --hotkeypad-fg-kbd: var(--color-text);

      /* Input */
      --hotkeypad-bg-input: var(--color-bg-base);
      --hotkeypad-border-input: var(--color-border-light);
   }
</style>

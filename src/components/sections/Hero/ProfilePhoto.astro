---
import { Image } from "astro:assets";
import profilePic from "@assets/santiago-goncalvez-front-face-background-transparent.webp";

const {
   width = 500,
   height = 500,
   sizes = "(max-width: 768px) 150px, 500px",
   class: extraClass = "",
} = Astro.props;
---

<div
   class={`order-1 shrink-0 rounded-full
         shadow-[0_10px_30px_rgba(0,0,0,0.08),0_0_10px_rgba(0,0,0,0.02)]
         dark:shadow-[0_20px_50px_rgba(0,0,0,0.9),0_0_20px_rgba(255,255,255,0.03)]
         transition-all duration-500 ease-out
         hover:scale-103 hover:shadow-[0_20px_40px_rgba(0,0,0,0.12)]
         dark:hover:shadow-[0_30px_60px_rgba(0,0,0,0.2),0_0_30px_rgba(255,255,255,0.05)]
         ${extraClass}`}
>
   <Image
      src={profilePic}
      alt="Retrato de Santiago Goncalvez - Desarrollador Web"
      width={width}
      height={height}
      widths={[150, 300, 500, 800]}
      sizes={sizes}
      format="webp"
      quality={80}
      loading="lazy"
      class="rounded-full object-cover w-full h-auto bg-[#faf9f9] dark:bg-text-muted"
   />
</div>

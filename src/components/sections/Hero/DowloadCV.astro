---
import DowloadIcon from "../../../icons/Dowload.astro";

const { class: className, ...props } = Astro.props;
---

<a
   href="/Santiago-Goncalvez-CV.pdf"
   download="Santiago-Goncalvez-CV.pdf"
   class:list={[
      "group w-fit relative inline-flex items-center justify-center gap-x-2",
      "py-2.5 px-6 rounded-full overflow-hidden",
      "transition-all duration-300",
      "border backdrop-blur-sm",

      // --- TUS COLORES BASE (Respetados) ---
      "text-title dark:text-bg-base",
      "bg-bg-base dark:bg-title border-black/5 dark:border-white/10",

      // --- EFECTO PLATINADO HOVER ---
      // Light: Un brillo blanco-plata radial
      "hover:bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] hover:from-white/60 hover:to-bg-base",
      // Dark: Un brillo metÃ¡lico que resalta el fondo oscuro
      "dark:hover:bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] dark:hover:from-white dark:hover:to-bg-surface",

      "no-mobile-motion",

      className,
   ]}
   {...props}
>
   <div
      class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 dark:via-border-strong/60 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700 ease-in-out"
   >
   </div>

   <div class="relative flex items-center justify-center size-4 md:size-6">
      <DowloadIcon/>
   </div>

   <span class="relative text-sm md:text-base font-bold tracking-wide">
      Descargar CV
   </span>
</a>

---
import ProfilePhoto from "./ProfilePhoto.astro";
import PrincipalTitle from "../../shared/PrincipalTitle.astro";
import HeroHeader from "./HeroHeader.astro";
import HeroDescription from "./HeroDescription.astro";
import HeroNav from "./HeroNav.astro";
---

<div class="w-full flex flex-row items-center justify-content gap-8">
   <div class="w-full flex flex-col gap-8 order-2 order-first">
      <HeroHeader />

      <PrincipalTitle />

      <HeroDescription />

      <HeroNav />
   </div>

   <ProfilePhoto
      class="w-64 h-64 hidden md:block"
      width={256}
      height={256}
      sizes="256px"
   />
</div>

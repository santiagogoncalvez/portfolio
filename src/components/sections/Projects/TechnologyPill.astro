---
// TechnologyPill.astro
interface Props {
   name: string;
   color: string;
   Icon: any;
   class?: string;
}

const { name, color, Icon, class: className, ...props } = Astro.props;
---

<div
   {...props}
   class:list={[
      "technology-pill group",
      "inline-flex items-center gap-x-2 px-2 py-2",
      "rounded-full",
      "transition-all duration-200 ease-out",
      "text-border-strong group-hover:text-bg-base dark:text-text-highlighted group-hover:dark:text-text",
      "bg-transparent",
      className,
   ]}
>
   <Icon class="size-4" />

   <span class="text-xs font-bold">
      {name.toUpperCase()}
   </span>
</div>

<style>
   .technology-pill {
      /* Optimización de renderizado crítico */
      contain: content;
      cursor: default;
   }

   .technology-pill:hover {
      /* Usamos color-mix para generar un fondo suave basado en el color de la marca */
      transform: translateY(-1px);
      box-shadow: 0 4px 12px -4px
         color-mix(in srgb, var(--brand-color) 25%, transparent);
   }

   /* Reducimos el movimiento del layout para mejorar CLS */
   @media (prefers-reduced-motion: reduce) {
      .technology-pill {
         transition: none;
         transform: none;
      }
   }
</style>

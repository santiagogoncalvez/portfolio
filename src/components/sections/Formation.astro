---
import UniversityIcon from "../../icons/University.astro";
import ReactIcon from "../../icons/React.astro";
import BookIcon from "../../icons/Book.astro";
import JavaScriptIcon from "../../icons/JavaScript.astro";
import Subtitle from "../shared/Subtitle.astro";

interface BentoItem {
   title: string;
   subtitle: string;
   description?: string;
   icon?: any;
   class?: string;
   tags?: string[];
}

const formationItems: BentoItem[] = [
   {
      title: "Ingeniería Informática",
      subtitle: "Universidad (En curso)",
      description:
         "Formación sólida en algoritmos, estructuras de datos y arquitectura de software.",
      icon: UniversityIcon,
      class: "md:col-span-2 md:row-span-2",
      tags: ["C", "Estructuras", "Matemática", "Proyectos"],
   },
   {
      title: "Especialización React",
      subtitle: "Midudev / Curso",
      description:
         "Dominio avanzado de Hooks, Context API, y optimización de rendimiento.",
      icon: ReactIcon,
      class: "md:col-span-2 border-l-2 border-l-bg-deep/10 dark:border-l-white/10",
   },
   {
      title: "The Road to React",
      subtitle: "Libro",
      description: "Patrones de diseño modernos.",
      icon: BookIcon,
      class: "md:col-span-1",
   },
   {
      title: "Eloquent JavaScript",
      subtitle: "Libro",
      description: "Fundamentos del lenguaje.",
      icon: JavaScriptIcon,
      class: "md:col-span-1",
   },
];
---

<Subtitle class="flex flex-row items-center gap-x-4">
   <BookIcon class="size-8" />
   <span>Formación</span>
</Subtitle>

<div
   class="grid grid-cols-1 md:grid-cols-4 gap-4 auto-rows-[minmax(180px,auto)]"
>
   {
      formationItems.map((item) => {
         const IconComponent = item.icon;

         return (
            <article
               class={`
                  group relative overflow-hidden rounded-3xl p-6 flex flex-col transition-all duration-500
 
                   border border-transparent
                   bg-title/80 dark:bg-[#171717] 

                  hover:scale-[1.01] 
                  hover:border-text-highlighted/60
                  ${item.class || ""}
               `}
            >
               {/* Icono de fondo gigante */}
               {item.class?.includes("row-span-2") && item.icon && (
                  <div class="absolute -bottom-12 -right-12 size-64 text-bg-deep dark:text-white opacity-[0.03] group-hover:opacity-[0.06] transition-all duration-500 -rotate-12 pointer-events-none">
                     <IconComponent />
                  </div>
               )}

               {/* Glow decorativo superior (Azulado sutil en light) */}
               <div class="absolute top-0 right-0 -mr-10 -mt-10 w-32 h-32 rounded-full bg-blue-500/10 dark:bg-white/5 blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700" />

               {/* Header: Subtítulo e Icono */}
               <div class="relative w-full z-10">
                  <div class="flex items-center justify-between mb-3">
                     <span class="text-[10px] font-bold uppercase tracking-widest text-text-muted dark:text-text-highlighted border border-black/[0.05] dark:border-white/10 px-2.5 py-1 rounded-full bg-white/50 dark:bg-bg-base">
                        {item.subtitle}
                     </span>

                     {item.icon && (
                        <div class="size-8 text-bg-deep/40 dark:text-text-muted group-hover:text-bg-deep dark:group-hover:text-title transition-colors">
                           <IconComponent />
                        </div>
                     )}
                  </div>
               </div>

               {/* Cuerpo */}
               <div class="relative flex-grow flex flex-col justify-center z-10">
                  <h3 class="text-xl md:text-2xl font-bold text-bg-deep dark:text-title leading-tight transition-transform duration-300">
                     {item.title}
                  </h3>

                  {item.description && (
                     <p class="text-sm text-border-strong dark:text-text mt-3 leading-relaxed opacity-80">
                        {item.description}
                     </p>
                  )}

                  {item.tags && (
                     <div class="flex flex-wrap gap-2 mt-5">
                        {item.tags.map((tag) => (
                           <span class="text-[10px] font-medium px-2 py-1 rounded-md bg-black/[0.03] dark:bg-white/[0.03] border border-black/[0.05] dark:border-white/10 text-bg-deep dark:text-text">
                              {tag}
                           </span>
                        ))}
                     </div>
                  )}
               </div>

               {/* Pie opcional para grandes */}
               {item.class?.includes("row-span-2") && (
                  <div class="relative mt-6 pt-4 border-t border-black/[0.05] dark:border-white/5 sm:opacity-80 opacity-100 group-hover:opacity-100 transition-opacity z-10">
                     <span class="text-[9px] font-black uppercase tracking-[0.2em] text-bg-deep dark:text-text">
                        Sistemas · Algoritmos · Arquitectura
                     </span>
                  </div>
               )}
            </article>
         );
      })
   }
</div>

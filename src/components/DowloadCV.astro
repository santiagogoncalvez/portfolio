---
// DownloadCV.astro
const { class: className, ...props } = Astro.props;
---

<a
   href="/Santiago-Goncalvez-Curriculum-Vitae.pdf"
   download="Santiago-Goncalvez-Curriculum-Vitae.pdf"
   class:list={[
      "group relative inline-flex items-center justify-center gap-x-2",
      "py-2.5 px-6 rounded-full overflow-hidden",
      "transition-all duration-300",
      "border backdrop-blur-sm",

      // --- TUS COLORES BASE (Respetados) ---
      "text-title dark:text-bg-base",
      "bg-bg-base dark:bg-title border-black/5 dark:border-white/10",

      // --- EFECTO PLATINADO HOVER ---
      // Light: Un brillo blanco-plata radial
      "hover:bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] hover:from-white/60 hover:to-bg-base",
      // Dark: Un brillo metÃ¡lico que resalta el fondo oscuro
      "dark:hover:bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] dark:hover:from-white dark:hover:to-bg-surface",

      className,
   ]}
   {...props}
>
   <div
      class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 dark:via-border-strong/80 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700 ease-in-out"
   >
   </div>

   <div class="relative flex items-center justify-center">
      <svg
         class="size-5 transition-colors duration-300 stroke-current"
         xmlns="http://www.w3.org/2000/svg"
         viewBox="0 0 24 24"
         fill="none"
         stroke-width="2"
         stroke-linecap="round"
         stroke-linejoin="round"
      >
         <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2"></path>
         <polyline
            points="7 10 12 15 17 10"
            class="group-hover:translate-y-1 transition-transform duration-300"
         ></polyline>
         <line
            x1="12"
            y1="15"
            x2="12"
            y2="3"
            class="group-hover:translate-y-0.5 transition-transform duration-300"
         ></line>
      </svg>
   </div>

   <span class="relative text-sm md:text-base font-bold tracking-wide">
      Descargar CV
   </span>
</a>

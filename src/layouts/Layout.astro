---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="description" content={description} />
      <meta name="viewport" content="width=device-width" />
      <link rel="icon" type="image/png" href="/favicon.png" />
      <meta name="generator" content={Astro.generator} />
      <title>{title}</title>
   </head>
   <body>
      <div class="fixed inset-0 -z-10 h-full w-full overflow-hidden">
         <div
            class="absolute inset-0
    bg-[radial-gradient(50%_50%_at_50%_10%,rgba(250,250,250,1)_10%,rgba(233,233,233,1)_70%)]
    dark:bg-[radial-gradient(at_50%_10%,rgba(244,244,244,0)_10%,#121212_70%)]
    dark:bg-black"
         >
         </div>
      </div>

      <div class="relative flex flex-col items-center min-h-screen">
         <Header />
         <main class="w-full">
            <slot />
         </main>
         <Footer />
      </div>
   </body>
</html>

<style>
   :root {
      color-scheme: light dark;
   }

   html {
      font-family: "Onest variable", system-ui, sans-serif;
      scroll-behavior: smooth;
   }
   body {
      /* background: #2a2929; */
      height: 100vh;
   }

   @media (prefers-reduced-motion: reduce) {
      html {
         scroll-behavior: auto;
      }
   }
</style>

<script is:inline>
   // Forzar el scroll al inicio antes de que el navegador intente restaurar la posición
   if ("scrollRestoration" in history) {
      history.scrollRestoration = "manual";
   }

   window.scrollTo(0, 0);

   // Opcional: Asegurarse de que incluso tras la carga completa esté arriba
   window.addEventListener("beforeunload", () => {
      window.scrollTo(0, 0);
   });
</script>

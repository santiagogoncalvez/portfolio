---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="description" content={description} />
      <meta name="viewport" content="width=device-width" />
      <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
      <meta name="generator" content={Astro.generator} />
      <title>{title}</title>
   </head>
   <body>
      <div class="relative h-full w-full bg-[#2a2a2a]">
         <div
            class="absolute bottom-0 left-0 right-0 top-0 bg-radial-[at_50%_10%] from-[rgba(244,244,244,0)] from-10% to-[rgba(18,18,18,1)] to-70%"
         >
            <div class="flex flex-col items-center">
               <Header />
               <slot />
               <Footer />
            </div>
         </div>
      </div>
   </body>
</html>

<style>
   :root {
      color-scheme: light dark;
   }

   html {
      font-family: "Onest variable", system-ui, sans-serif;
      scroll-behavior: smooth;
   }
   body {
      /* background: #2a2929; */
      height: 100vh;
   }

   @media (prefers-reduced-motion: reduce) {
      html {
         scroll-behavior: auto;
      }
   }
</style>

<script is:inline>
   // Forzar el scroll al inicio antes de que el navegador intente restaurar la posición
   if ("scrollRestoration" in history) {
      history.scrollRestoration = "manual";
   }

   window.scrollTo(0, 0);

   // Opcional: Asegurarse de que incluso tras la carga completa esté arriba
   window.addEventListener("beforeunload", () => {
      window.scrollTo(0, 0);
   });
</script>

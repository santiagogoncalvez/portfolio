---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="description" content={description} />
      <meta name="viewport" content="width=device-width" />
      <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
      <meta name="generator" content={Astro.generator} />
      <title>{title}</title>
   </head>

   <body class="relative min-h-screen">
      <div class="absolute inset-0 -z-10 w-full h-full overflow-hidden">
         <div
            class="absolute inset-0
    bg-[#f5f5f5]
    dark:bg-[#0f0f10]
    bg-[radial-gradient(ellipse_120%_80%_at_50%_-10%,#fafafa_10%,#e9e9e9_70%)]
dark:bg-[radial-gradient(ellipse_120%_80%_at_50%_-10%,#1c1c1e_10%,rgba(244,244,244,0)_70%)]"
         >
         </div>
      </div>

      <div class="relative flex flex-col items-center min-h-screen w-full">
         <Header />
            <slot />
         <Footer />
      </div>
   </body>
</html>

<style>
   :root {
      color-scheme: light dark;
   }

   html {
      font-family: "Onest variable", system-ui, sans-serif;
      scroll-behavior: smooth;
   }
   body {
      /* background: #2a2929; */
      /* height: 100vh; */
      height: 100%;
   }

   @media (prefers-reduced-motion: reduce) {
      html {
         scroll-behavior: auto;
      }
   }
</style>

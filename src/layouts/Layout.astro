---
import Header from "../components/shared/Header.astro";
import Footer from "../components/shared/Footer.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import GradientBackground from "../components/shared/GradientBackground.astro";

// IMPORTANTE: Decide cuál es tu fuente principal.
// Si es Onest para todo el sitio, usa solo Onest.
import "@fontsource-variable/onest";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
   <head>
      <!-- Basic -->
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width" />
      <title>{title}</title>
      <meta name="description" content={description} />
      <meta name="generator" content={Astro.generator} />

      <!-- Canonical -->
      <link rel="canonical" href="https://santiagogoncalvez.web.app" />

      <!-- Favicons -->
      <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
      <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />

      <!-- Open Graph (WhatsApp / LinkedIn / Facebook) -->
      <meta property="og:type" content="website" />
      <meta property="og:locale" content="es_AR" />
      <meta property="og:title" content={title} />
      <meta property="og:description" content={description} />
      <meta property="og:url" content="https://santiagogoncalvez.web.app" />
      <meta
         property="og:image"
         content="https://santiagogoncalvez.web.app/og-image.png"
      />
      <meta property="og:image:width" content="1200" />
      <meta property="og:image:height" content="630" />
      <meta
         property="og:image:alt"
         content="Santiago Goncalvez, Frontend Developer especializado en React y TypeScript"
      />

      <meta property="og:site_name" content="Santiago Goncalvez" />

      <!-- Twitter Card -->
      <meta name="twitter:card" content="summary_large_image" />
      <meta name="twitter:title" content={title} />
      <meta name="twitter:description" content={description} />
      <meta
         name="twitter:image"
         content="https://santiagogoncalvez.web.app/og-image.png"
      />

      <ClientRouter />

      <script>
         const initMotion = async () => {
            await import("../scripts/section-motion.mjs");
         };

         if (document.readyState === "complete") {
            initMotion();
         } else {
            window.addEventListener("load", initMotion);
         }
      </script>

      <style is:global>
         /* Definimos la fuente una sola vez en el lugar de mayor jerarquía */
         :root {
            color-scheme: light dark;
         }

         html {
            /* Usamos Onest como principal. Si prefieres Inter, cámbiala aquí */
            font-family: "Onest Variable", system-ui, sans-serif;
            scroll-behavior: smooth;
         }

         body {
            margin: 0;
            min-height: 100vh;
            /* Evita redundancia de fuentes aquí */
         }

         @media (prefers-reduced-motion: reduce) {
            html {
               scroll-behavior: auto;
            }
         }
      </style>
   </head>

   <body class="relative min-h-screen">
      <GradientBackground />

      <div class="relative flex flex-col items-center min-h-screen w-full">
         <Header />
         <slot />
         <Footer />
      </div>
   </body>
</html>

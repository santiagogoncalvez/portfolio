---
import "../styles/global.css";

import Header from "../components/shared/Header.astro";
import Footer from "../components/shared/Footer.astro";
import GradientBackground from "../components/shared/GradientBackground.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width" />
      <title>{title}</title>
      <meta name="description" content={description} />

      <link
         rel="preload"
         href="/fonts/onest-latin-wght-normal.woff2"
         as="font"
         type="font/woff2"
         crossorigin="anonymous"
      />

      <style is:global>
         @font-face {
            font-family: "Onest Variable";
            src: url("/fonts/onest-latin-wght-normal.woff2") format("woff2");
            font-weight: normal;
            font-style: normal;
            font-display: swap;
         }

         :root {
            color-scheme: light dark;
         }

         html {
            font-family: "Onest Variable", system-ui, sans-serif;
            scroll-behavior: smooth;
         }

         body {
            margin: 0;
            min-height: 100vh;
         }

         @media (prefers-reduced-motion: reduce) {
            html {
               scroll-behavior: auto;
            }
         }
      </style>

      <meta name="generator" content={Astro.generator} />

      <link rel="canonical" href="https://santiagogoncalvez.web.app" />

      <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
      <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />

      <meta property="og:type" content="website" />
      <meta property="og:locale" content="es_AR" />
      <meta
         property="og:title"
         content="Santiago Goncalvez â€“ Desarrollador Frontend React & TS"
      />
      <meta property="og:description" content={description} />
      <meta property="og:url" content="https://santiagogoncalvez.web.app" />
      <meta
         property="og:image"
         content="https://santiagogoncalvez.web.app/og-image.png"
      />
      <meta property="og:image:width" content="1200" />
      <meta property="og:image:height" content="630" />
      <meta
         property="og:image:alt"
         content="Santiago Goncalvez, Desarrollador Frontend especializado en React y TypeScript"
      />

      <meta property="og:site_name" content="Santiago Goncalvez" />

      <!-- Twitter Card -->
      <meta name="twitter:card" content="summary_large_image" />
      <meta name="twitter:title" content={title} />
      <meta name="twitter:description" content={description} />
      <meta
         name="twitter:image"
         content="https://santiagogoncalvez.web.app/og-image.png"
      />
   </head>

   <body class="relative min-h-screen">
      <GradientBackground />

      <div class="relative flex flex-col items-center min-h-screen w-full">
         <Header />
         <slot />
         <Footer />
      </div>
   </body>
</html>

{
   "extends": "astro/tsconfigs/strict",
   "compilerOptions": {
      "types": ["node"],
      "baseUrl": ".",
      "paths": {
         "@/*": ["src/*"],
         "@components/*": ["src/components/*"],
         "@sections/*": ["src/components/sections/*"],
         "@shared/*": ["src/components/shared/*"],
         "@icons/*": ["src/icons/*"],
         "@assets/*": ["src/assets/*"],
         "@styles/*": ["src/styles/*"],
         "@scripts/*": ["src/scripts/*"]
      }
   },
   "include": ["src", ".astro/types.d.ts"],
   "exclude": ["dist"]
}
